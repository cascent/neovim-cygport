inherit lua

NAME="lua-mpack"
VERSION=1.0.7
RELEASE=0
CATEGORY="Lua"
SUMMARY="libmpack lua binding"
DESCRIPTION="libmpack lua binding"
HOMEPAGE="https://github.com/libmpack/libmpack-lua"
SRC_URI="https://github.com/libmpack/libmpack-lua/releases/download/${VERSION}/libmpack-lua-${VERSION}.tar.gz"
SRC_DIR="libmpack-lua-${VERSION}"

src_compile() {
	#lndirs
	cd ${B}
	${CC} ${CFLAGS} ${LUA_CFLAGS} -shared -o mpack.dll ${S}/*.c ${LUA_LIBS}
}

src_install() {
	dolua ${B}/mpack.dll
}
